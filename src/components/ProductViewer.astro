---
import { cn } from '@/lib/utils'
interface Props {
  images: { url: string; thumb: string }[]
  id: string
  title: string
}

const { images, id, title } = Astro.props
---

<main class="container mx-auto px-4 py-6">
  <article class="flex flex-col justify-center relative gap-4">
    {/* Main */}
    <div>
      {/* ViewPort */}
      <div class="overflow-hidden">
        {/* Container */}
        <div class="flex touch-pan-y">
          <img
            transition:name={`product-image-${id}`}
            src={images[0].url}
            alt={title}
          />
        </div>
      </div>
    </div>

    {/* Thumbs */}
    <div class="overflow-hidden">
      {/* Container */}
      <ul class="flex">
        {
          images.map((img, index) => {
            const isActive = false
            return (
              <li
                class={cn(
                  'min-w-0 pl-1 shrink-0 grow-0 basis-1/6 md:basis-[10%] cursor-pointer',
                  {
                    'opacity-40': isActive,
                  },
                )}
              >
                <img src={img.thumb} />
              </li>
            )
          })
        }
        <!-- {video.url && <VideoModal video={video} />} -->
      </ul>
    </div>
  </article>
</main>
